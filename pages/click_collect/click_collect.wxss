/* pages/click_collect/click_collect.wxss */

page {
  background-color: #f7f7f7;
}

.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  margin-top: 120rpx;
  padding-bottom: 100rpx;
}

.management {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 160rpx 68rpx 40rpx 25rpx;
}

.man_left {
  font-size: 26rpx;
  color: #808080;
}

.man_right {
  font-size: 26rpx;
  color: #333;
}

/* 收藏商品 */

.collection {
  width: 700rpx;
  height: 196rpx;
  background-color: #fff;
  margin: 0 25rpx 20rpx 25rpx;
  padding-top: 40rpx;
}

.select{
  width: 32rpx;
  height: 32rpx;
  margin: 0 20rpx;
  float: left;
}

.col_img {
  width: 148rpx;
  height: 148rpx;
  margin: 0 20rpx 0 0;
  float: left;
}
.col_img2{
    width: 148rpx;
  height: 148rpx;
  margin: 0 20rpx 0 40rpx;
  float: left;
}

.col_right {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 0 43rpx 0 0;
}

.goods_name {
  font-size: 26rpx;
  color: #333;
}

.col_right_dis {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
}

.goods_price {
  font-size: 26rpx;
  color: #de4040;
  text-align: left;
}

.but2 {
  width: 180rpx;
  height: 50rpx;
  border-radius: 24rpx;
  background-color: #ccc;
  font-size: 24rpx;
  color: #fff;
  line-height: 50rpx;
  text-align: center;
}

/* 猜你喜欢 */

.Hot_Sale {
  width: 137rpx;
  height: 30rpx;
  margin: 60rpx auto 30rpx auto;
  display: block;
}

.recommend {
  width: 340rpx;
  height: 500rpx;
  background-color: #fff;
  /* margin-right: 20rpx; */
  margin: 0 0 20rpx 30rpx;
  float: left;
}

.recommend_img {
  width: 300rpx;
  height: 300rpx;
  margin: 20rpx 0 10rpx 20rpx;
}

.recommend_name {
  width: 300rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #333;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.recommend_price {
  margin: 20rpx 0 10rpx 20rpx;
  text-align: left;
  font-size: 26rpx;
  color: #ed3030;
}

.payment {
  font-size: 22rpx;
  color: #b3b3b3;
  text-align: left;
  margin-left: 20rpx;
}

/* 底部功能条 */

.but {
  width: 750rpx;
  height: 150rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}

.but_left {
  margin: 0 0 0 46rpx;
  display: flex;
  align-items: center;
}

.check_all {
  width: 32rpx;
  height: 32rpx;
  margin: 0 13rpx 0 0;
}

.char {
  font-size: 26rpx;
  color: #333;
}


.shift_out {
  width: 200rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #de4040;
  border-radius: 35rpx;
  margin: 0 25rpx 0 0;
}
