/* pages/logistics/logistics.wxss */

page {
  background-color: #f7f7f7;
}

.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  margin-top: 130rpx;
}

/* 订单编号 */

.serial {
  text-align: left;
  font-size: 28rpx;
  color: #333;
  padding: 40rpx 0 34rpx 25rpx;
  background-color: white;
}

/* 订单商品 */

.goods {
  width: 750rpx;
  background-color: white;
  display: flex;
  align-items: center;
  margin: 0 0 15rpx 0;
  padding-bottom: 50rpx;
}

.logistics_img {
  width: 110rpx;
  height: 110rpx;
  margin: 0 20rpx 0 25rpx;
}

.dis_name {
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}

.dis_num {
  font-size: 26rpx;
  color: #b3b3b3;
}

/* 物流信息 */

.message {
  margin: 0 0 15rpx 0;
  background-color: #fff;
  padding: 50rpx 0 50rpx 0;
}

.message_char {
  font-size: 28rpx;
  color: #333;
  margin: 0 0 40rpx 25rpx;
  text-align: left;
}

.company {
  font-size: 26rpx;
  color: #333;
  margin: 0 0 0 25rpx;
  text-align: left;
}

.shipnum {
  font-size: 26rpx;
  color: #333;
  margin: 20rpx 0 0 25rpx;
  text-align: left;
}

/* 物流跟踪 */

.tail_after {
  /* margin: 0 0 60rpx 0; */
  background-color: #fff;
  padding: 50rpx 0 0 0;
}

.tail_char {
  font-size: 28rpx;
  color: #333;
  text-align: left;
  margin: 0 0 54rpx 25rpx;
}

.outer {
  border-left: 1px solid #b3b3b3;
  margin: 0 45rpx 20rpx 45rpx;
  position: relative;
  height: 130rpx;
}

.outer2 {
  margin: 0 45rpx 20rpx 45rpx;
  position: relative;
  height: 130rpx;
}

.status {
  font-size: 26rpx;
  color: #333;
  position: absolute;
  top: -20rpx;
  left: 44rpx;
}

.time {
  font-size: 22rpx;
  color: #333;
  position: absolute;
  top: 65rpx;
  left: 44rpx;
}

.outer_img {
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
  position: absolute;
  top: -22rpx;
  left: -22rpx;
}

.cut {
  padding: 50rpx 40rpx 50rpx 0;
  text-align: center;
  position: relative;
  background-color: #fff;
  margin-bottom: 60rpx;
}

.cut_img {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top: 41%;
  left: 63%;
}

/* 猜你喜欢 */

.guess {
  width: 137rpx;
  height: 30rpx;
  margin: 60rpx auto 30rpx auto;
  display: block;
}
.recommend{
  width: 340rpx;
  height: 500rpx;
  background-color: #fff;
  /* margin-right: 20rpx; */
  margin: 0 0 20rpx 30rpx;
  float: left;
}
.recommend_img{
  width: 300rpx;
  height: 300rpx;
  margin: 20rpx 0 10rpx 20rpx;
}
.recommend_name{
  width: 300rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #333333;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.recommend_price{
  margin: 20rpx 0 10rpx 20rpx;
  text-align: left;
  font-size: 26rpx;
  color: #ed3030;
}
.payment{
  font-size: 22rpx;
  color: #b3b3b3;
  text-align: left;
  margin-left: 20rpx;
}