/* pages/friends_details/friends_details.wxss */
page{
  background-color: #f7f7f7;
}
.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  margin-top: 120rpx;
}

.header{
  background-color: #ffffff;
  padding-top: 40rpx;
  padding-bottom: 20rpx;
}

.user_img{
  display: block;
  margin:0 auto 20rpx auto;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%; 
}
.user_name{
  text-align: center;
  font-size: 28rpx;
  color: #333333;
  margin: 0 0 20rpx 0;
  font-weight: bold;
}
.account{
  text-align: center;
  font-size: 26rpx;
  color: #333333;
  margin: 0 0 40rpx 0;
}
.time{
  text-align: center;
  font-size: 24rpx;
  color: #b3b3b3;
  margin: 0 0 50rpx 0;
}

.black{
  width: 700rpx;
  height: 100rpx;
  background-color: #333333;
  border-radius: 10rpx;
  margin: 30rpx auto 60rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.profit{
  margin-left: 60rpx;
  font-size: 32rpx;
  color: #ffffff;
}
.profit_right{
  margin-right: 35rpx;
  display: flex;
  align-items: center;
}
.profit_price{
  font-size: 32rpx;
  color: #ffffff;
  margin: 0 22rpx 0 0;
}
.you{
  width: 12rpx;
  height: 22rpx;
}

.report{
  font-size: 26rpx;
  color: #808080;
  text-align: right;
  margin: 0 55rpx 30rpx 0;

}
.report_img{
  width: 110rpx;
  height: 128rpx;
  margin: 160rpx auto 40rpx auto;
  display: block;
}
.report_char{
  font-size: 28rpx;
  color: #808080;
  text-align: center;
}

.y_report{
  width: 700rpx;
  height: 150rpx;
  background-color: #ffffff;
  margin: 0 auto 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.report_time{
  font-size: 24rpx;
  color: #808080;
  margin: 0 0 0 30rpx;
}
.report_price{
  font-size: 26rpx;
  color: #333333;
}
.report_price_de{
  font-size: 32rpx;
  color: #de4040;
}