/* pages/productList/productList.wxss */
.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  height: 100%;
  margin-top: 110rpx;
}

/* 搜索框 */

.search_box{
  width: 700rpx;
  height: 67rpx;
  line-height: 67rpx;
  margin: 150rpx auto 50rpx auto;
  border-radius: 33rpx;
  background-color: #fafafa;
  border: 1px solid #cccccc;
}

.search_char{
  font-size: 28rpx;
  color: #333333;
  margin-left: 70rpx;
}

/* 排序、切换视图、筛选 */
.cut_all{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 65rpx 30rpx 65rpx;
}
.synthesize{
  font-size: 28rpx;
  color: #808080;
}
.sales_volume{
  font-size: 28rpx;
  color: #808080;
}
.price_all{
  display: flex;
  align-items: center;
}
.price_all_char{
  font-size: 28rpx;
  color: #808080;
  margin-right: 15rpx;
}
.price_all_img{

}
.price_all_img_up{
  width: 14rpx;
  height: 9rpx;
  display: block;
  margin-bottom: 6rpx;
}

.price_all_img_down{
  width: 14rpx;
  height: 9rpx;
  display: block;
}
.product_list{
  width: 28rpx;
  height: 28rpx;
}
.wire{
  width: 1rpx;
  height: 30rpx;
  background-color: #cccccc;
}
.filtrate_all{
  display: flex;
  align-items: center;
}
.filtrate{
  font-size: 28rpx;
  color: #808080;
  margin-right: 10rpx;
}
.filtrate_img{
  width: 28rpx;
  height: 28rpx;
}

.click_red{
  font-size: 28rpx;
  color: #de4040;
}

.interval{
  height:15rpx;
  background-color: #f7f7f7;
}

/* 商品列表视图 */

.goods_list{
  width: 700rpx;
  height: 250rpx;
  margin: 30rpx auto 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods_img{
  width: 250rpx;
  height: 250rpx;
}
.goods_mes{
  margin-left: 20rpx;
}
.goods_name{
  font-size: 28rpx;
  color: #333333;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.activity{
  font-size: 24rpx;
  color: #de4040;
  margin: 20rpx 0 50rpx 0;
}
.activity span{
  font-size: 24rpx;
  color: #b3b3b3;
}

.paynums{
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}
.payment{
  font-size: 24rpx;
  color: #b3b3b3;
  margin-right: 100rpx;
}
.praise{
  font-size: 24rpx;
  color: #b3b3b3;
}
.goods_price{
  font-size: 28rpx;
  color: #de4040;
  text-align: left;
}

/* 商品平铺视图 */
.goods_tile_all{
  background-color: #f7f7f7;
  padding: 25rpx 15rpx 0 25rpx;
}
.goods_tile{
  width: 345rpx;
  height: 570rpx;
  margin: 10rpx 10rpx 0 0;
  float: left;
}
.goods_tile_img{
  width: 345rpx;
  height: 345rpx;
  margin-bottom: 20rpx;
}
.goods_tile_name{
  font-size: 28rpx;
  color: #333333;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.feedback{
  font-size: 24rpx;
  color: #b3b3b3;
  margin: 30rpx 0 20rpx 0; 
}
.goods_tile_price{
  font-size: 28rpx;
  color: #de4040;
}