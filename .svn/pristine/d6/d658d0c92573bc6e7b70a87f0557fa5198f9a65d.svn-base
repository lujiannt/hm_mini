/* pages/logistics/logistics.wxss */

page {
  background-color: #f7f7f7;
}

.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  margin-top: 130rpx;
}

/* 订单编号 */

.serial {
  text-align: left;
  font-size: 28rpx;
  color: #333333;
  padding: 40rpx 0 34rpx 25rpx;
  background-color: white;
}

/* 订单商品 */

.goods {
  width: 750rpx;
  background-color: white;
  display: flex;
  align-items: center;
  margin: 0 0 15rpx 0;
  padding-bottom: 50rpx;
}

.logistics_img {
  width: 110rpx;
  height: 110rpx;
  margin: 0 20rpx 0 25rpx;
}

.dis_name {
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}
.dis_num{
  font-size: 26rpx;
  color: #b3b3b3;
}
