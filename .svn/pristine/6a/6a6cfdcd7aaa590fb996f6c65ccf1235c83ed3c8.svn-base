  // 验证两次密码
  blur_reset:function(e){
    if (this.data.newPassword1 != '' && this.data.newPassword2 != ''){
      if (this.data.newPassword1 != this.data.newPassword2) {
        this.setData({
          password_error: true,
          disabledad:true,
        })
      } else {
        this.setData({
          password_error: false,
          disabledad: false,
        })
      }
    }else{
      this.setData({
        password_error: false,
      })
    }

  },
  


  // 设置密码表单提交
  nextSubmit: function(e) {
    console.log(e.detail.value, "eee")

    console.log(this.data.reset_phone,"rrrrr")

    wx.request({
      url: configuration.HOST + '/mini/member/modifyPwd',
      method: "POST",
      header: {
        "Content-Type": "application/x-www-form-urlencoded"
      },
      data: {
        phone:this.data.reset_phone,
        password:e.detail.value.password2,

      },
      success: res => {
        console.log(res, "rrr")

        if (res.statusCode != 200) {
          wx.showToast({
            title: '系统错误,请稍后',
            icon: 'none',
            duration: 1000,
          });
        }

        if (res.data.code == 200) {
          this.setData({
            amendwin: true,
          })
        } else if (res.data.code == 400) {
          wx.showToast({
            title: res.data.msg,
            icon: 'none',
            duration: 1500,
          });
        } else {
          wx.showToast({
            title: '系统错误,请稍后',
            icon: 'none',
            duration: 1000,
          });
        }

      },
      fail: req => {
        console.log(req, "qqq")
        wx.showToast({
          title: '系统错误,请稍后',
          icon: 'none',
          duration: 1000,
        });
      }
    })


  },


  // 修改密码成功跳转
  confirm_jump: function(e) {
