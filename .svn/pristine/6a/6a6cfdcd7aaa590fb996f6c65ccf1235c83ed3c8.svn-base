// pages/TextLogin/TextLogin.js
const app = getApp()
var configuration = require('../../configuration/configuration.js');
Page({

  /**
   * 页面的初始数据
   */
  data: {
    newcode: "",
    phonenum: "",
    disabledtj: true,
    disabledad: true,
    currentTime: 60,
    dclick: true,
    next_step: false,
    isshow1: true,
    isshow2: true,
    newPassword1: "",
    newPassword2: "",
    amendwin: false,
    reset_phone:'',
    password_error:false,
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function(options) {
    console.log(options, "oooo")
    if (options.note) {
      this.setData({
        note: options.note
      })
      this.data.note = options.note
    }
  },

  // 获取验证码
  getcode: function(e) {
    if (this.data.note == 'true') {
      // 短信登录
      wx.request({
        url: configuration.HOST + '/mini/member/getCode',
        method: "POST",
        header: {
          "Content-Type": "application/x-www-form-urlencoded"
        },
        data: {
          template: 1,
          phone: this.data.phonenum,
        },
        success: res => {
          console.log(res, "rrr")

          if (res.statusCode != 200) {
            wx.showToast({
              title: '系统错误,请稍后',
              icon: 'none',
              duration: 1000,
            });
          }

          if (res.data.code == 200) {
            var that = this;
            var currentTime = that.data.currentTime;
            that.data.token = res.data.data.token
            that.setData({
              time: currentTime + '秒后重发',
              dclick: false,
            })
            var interval = setInterval(function () {
              that.setData({
                time: (currentTime - 1) + '秒后重发'
              })
              currentTime--;
              if (currentTime <= 0) {
                clearInterval(interval)
                that.setData({
                  dclick: true,
                  currentTime: 60,
                })
              }
            }, 1000)
          } else if (res.data.code == 400) {
            wx.showToast({
              title: res.data.msg,
              icon: 'none',
              duration: 1500,
            });
          } else {
            wx.showToast({
              title: '系统错误,请稍后',
              icon: 'none',
              duration: 1000,
            });
          }

        },
        fail: req => {
          console.log(req, "qqq")
          wx.showToast({
            title: '系统错误,请稍后',
            icon: 'none',
            duration: 1000,
          });
        }
      })
    } else {
      // 忘记密码
      wx.request({
        url: configuration.HOST + '/mini/member/getCode',
        method: "POST",
        header: {
          "Content-Type": "application/x-www-form-urlencoded"
        },
        data: {
          template: 2,
          phone: this.data.phonenum,
        },
        success: res => {
          console.log(res, "rrr")

          if (res.statusCode != 200) {
            wx.showToast({
              title: '系统错误,请稍后',
              icon: 'none',
              duration: 1000,
            });
          }

          if (res.data.code == 200) {
            var that = this;
            var currentTime = that.data.currentTime;
            that.data.token = res.data.data.token
            that.setData({
              time: currentTime + '秒后重发',
              dclick: false,
            })
            var interval = setInterval(function () {
              that.setData({
                time: (currentTime - 1) + '秒后重发'
              })
              currentTime--;
              if (currentTime <= 0) {
                clearInterval(interval)
                that.setData({
                  dclick: true,
                  currentTime: 60,
                })
              }
            }, 1000)
          } else if (res.data.code == 400) {
            wx.showToast({
              title: res.data.msg,
              icon: 'none',
              duration: 1500,
            });
          } else {
            wx.showToast({
              title: '系统错误,请稍后',
              icon: 'none',
              duration: 1000,
            });
          }

        },
        fail: req => {
          console.log(req, "qqq")
          wx.showToast({
            title: '系统错误,请稍后',
            icon: 'none',
            duration: 1000,
          });
        }
      })

    }


  },


  // 验证
  phone_number: function(e) {
    this.data.phonenum = e.detail.value
    if (/^1[34578]\d{9}$/.test(this.data.phonenum) && this.data.newcode != '') {
      this.setData({
        disabledtj: false,
      })
    }
  },
  code1: function(e) {
    this.setData({
      newcode: e.detail.value,
    })
    this.data.newcode = e.detail.value
    if (/^1[34578]\d{9}$/.test(this.data.phonenum) && this.data.newcode != '') {
      this.setData({
        disabledtj: false,
      })
    }
  },

  // 表单提交
  formSubmit: function(e) {
    console.log(e.detail.value, "eee")

    // 忘记密码
    if (this.data.note == "false") {
      this.data.reset_phone = e.detail.value.iphone
      // this.setData({
      //   next_step: true,
      // })

      wx.request({
        url: configuration.HOST + '/mini/member/checkCode',
        method: "POST",
        header: {
          "Content-Type": "application/x-www-form-urlencoded"
        },
        data: {
          phone: e.detail.value.iphone,
          code: e.detail.value.code,
          token: this.data.token,
        },
        success: res => {
          console.log(res, "rrr")

          if (res.statusCode != 200) {
            wx.showToast({
              title: '系统错误,请稍后',
              icon: 'none',
              duration: 1000,
            });
          }

          if (res.data.code == 200) {
            this.setData({
              next_step: true,
            })
          } else if (res.data.code == 400) {
            wx.showToast({
              title: res.data.msg,
              icon: 'none',
              duration: 1500,
            });
          }else {
            wx.showToast({
              title: '系统错误,请稍后',
              icon: 'none',
              duration: 1000,
            });
          }

        },
        fail: req => {
          console.log(req, "qqq")
          wx.showToast({
            title: '系统错误,请稍后',
            icon: 'none',
            duration: 1000,
          });
        }
      })

    }
  },

  // 验证码登录
  gain:function(e){
    var that = this

    console.log(wx.getStorageSync('openid'),"ooooooo")

    if (wx.getStorageSync('openid') != '' && wx.getStorageSync('openid') != undefined && wx.getStorageSync('openid') != null) {

      wx.request({
        url: configuration.HOST + '/mini/member/loginByPwd',
        method: "POST",
        header: {
          "Content-Type": "application/x-www-form-urlencoded"
        },
        data: {
          phone: this.data.phonenum,
          code: this.data.newcode,
          token: this.data.token,
        },
        success: res => {
          console.log(res, "rrr")

          if (res.statusCode != 200) {
            wx.showToast({
              title: '系统错误,请稍后',
              icon: 'none',
              duration: 1000,
            });
          }

          if (res.data.code == 200) {
            wx.showToast({
              title: '登录成功',
              icon: 'none',
              duration: 1000,
            });
            wx.setStorageSync("userinfo", res.data.data)
            wx.navigateBack({
              delta: 2
            })
          } else if (res.data.code == 400) {
            wx.showToast({
              title: res.data.msg,
              icon: 'none',
              duration: 1500,
            });
          } else {
            wx.showToast({
              title: '系统错误,请稍后',
              icon: 'none',
              duration: 1000,
            });
          }

        },
        fail: req => {
          console.log(req, "qqq")
          wx.showToast({
            title: '系统错误,请稍后',
            icon: 'none',
            duration: 1000,
          });
        }
      })




    }else{

      wx.login({
        success: function (res) {
          console.log(res, "rrr")

          wx.request({
            url: 'https://api.weixin.qq.com/sns/jscode2session',
            method: "GET",
            data: {
              appid: app.globalData.appid,
              secret: app.globalData.appSecret,
              js_code: res.code,
              grant_type: 'authorization_code',

            },
            success: res => {
              console.log(res, "rrr")
              wx.setStorageSync("openid", res.data.openid)

              wx.request({
                url: configuration.HOST + '/mini/member/loginByCode',
                method: "POST",
                header: {
                  "Content-Type": "application/x-www-form-urlencoded"
                },
                data: {
                  phone: that.data.phonenum,
                  code: that.data.newcode,
                  token: that.data.token,
                },
                success: res => {
                  console.log(res, "rrr")

                  if (res.statusCode != 200) {
                    wx.showToast({
                      title: '系统错误,请稍后',
                      icon: 'none',
                      duration: 1000,
                    });
                  }

                  if (res.data.code == 200) {
                    wx.showToast({
                      title: '登录成功',
                      icon: 'none',
                      duration: 1000,
                    });
                    wx.setStorageSync("userinfo", res.data.data)
                    wx.navigateBack({
                      delta: 2
                    })
                  } else if (res.data.code == 400) {
                    wx.showToast({
                      title: res.data.msg,
                      icon: 'none',
                      duration: 1500,
                    });
                  } else {
                    wx.showToast({
                      title: '系统错误,请稍后',
                      icon: 'none',
                      duration: 1000,
                    });
                  }

                },
                fail: req => {
                  console.log(req, "qqq")
                  wx.showToast({
                    title: '系统错误,请稍后',
                    icon: 'none',
                    duration: 1000,
                  });
                }
              })

            },
          })

        }
      })

    }



  },

  // 查看密码
  figure: function(e) {
    this.setData({
      isshow1: false,
    })
  },
  symbol: function(e) {
    this.setData({
      isshow1: true,
    })
  },
  password1: function(e) {
    this.setData({
      newPassword1: e.detail.value,
    })
    this.data.newPassword1 = e.detail.value
    if (this.data.newPassword1 != '' && this.data.newPassword2 != '') {
      if (this.data.newPassword1 != this.data.newPassword2) {
        this.setData({
          password_error: true,
          disabledad: true,
        })
      } else {
        this.setData({
          password_error: false,
          disabledad: false,
        })
      }
    } else {
      this.setData({
        password_error: false,
      })
    }

    

