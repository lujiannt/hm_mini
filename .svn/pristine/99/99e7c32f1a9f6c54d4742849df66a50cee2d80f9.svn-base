/**index.wxss**/
.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  height: 100%;
  margin-top: 110rpx;
}

.upper{
  padding-top: 42rpx;
  padding: 42rpx 0 30rpx 0;
}

/* 滚动显示搜索框 */

.roll_search{
  position: fixed;
  top: 115rpx;
  left: 0;
  background-color: #ffffff;
  height: 100rpx;
  width: 100%;
  z-index: 99;
}
.roll_search_box{
  width: 700rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 33rpx;
  background-color: #fafafa;
  border: 1px solid #cccccc;
  margin: 20rpx auto 0 auto;
  z-index: 99;
}

/* 搜索框 */
.search_box{
  width: 700rpx;
  height: 67rpx;
  line-height: 67rpx;
  margin: 0 auto 20rpx auto;
  border-radius: 33rpx;
  background-color: rgba(255,255,255,0.8);
  border: 1px solid rgba(255,255,255,1);
}

.search_char{
  font-size: 28rpx;
  color: #808080;
  margin-left: 70rpx;
}

/* 热搜 */
.top_search{
  font-size: 24rpx;
  color: #e6e6e6;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  margin: 0 85rpx 30rpx 85rpx;
}

/* 轮播图 */
.slideshow{
  width: 700rpx;
  height: 340rpx;
  border-radius: 30rpx;
  margin: 0 auto 40rpx auto;
}

.slide-image{
  width: 700rpx;
  height: 340rpx;
  border-radius: 30rpx;
}

/* 跳转分类 */
.skip_classify{
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  margin-bottom: 35rpx;
}

.skip_classify_img{
  width: 95rpx;
  height: 117rpx;
}

/* 新用户专享 */

.new_user_exclusive{
  width: 750rpx;
  height: 345rpx;
  margin: -50rpx 0 0 0;
}

/* 限时购、清仓特价 */

.both{
  width: 700rpx;
  height: 230rpx;
  margin: -80rpx auto 10rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 限时购 */

.time_to_buy{
  width: 345rpx;
  height: 230rpx;
  border-radius: 20rpx;
  background-color: #fff;
}

.time_to_dis{

}

.time_to_img{
  width: 97rpx;
  height: 28rpx;
  margin: 20rpx 0 0 20rpx;
}

.time_to_display{
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}
.time_to_both{
  
}
.time_to_both_img{
  width: 100rpx;
  height: 100rpx;
  /* margin: 0 0 10rpx 0; */
}

.selling_price{
  font-size: 22rpx;
  color: #ed3030;
  /* margin-bottom: 10rpx; */
  text-align: center;
}
.original_price{
  font-size: 18rpx;
  color: #b3b3b3;
  text-align: center;
  text-decoration:line-through;
}

/* 清仓特价 */
.lowest{
  width: 130rpx;
  height: 36rpx;
  background-color: #ed4040;
  border-radius: 18rpx;
  font-size: 22rpx;
  text-align: center;
  color: #fff;
  margin: 50rpx 0 0 20rpx;
}

.lowest_img{
  width: 150rpx;
  height: 150rpx;
  margin: 0 0 0 20rpx;
}

/* 缤纷活动 */

.face_activity{
  width: 700rpx;
  height: 650rpx;
  border-radius: 10rpx;
  background-color: #ffffff;
  margin: 10rpx auto 0 auto;
}
.title_img{
  width: 128rpx;
  height: 28rpx;
  margin: 20rpx 0 0 20rpx;
}
.banner_img{
  width: 660rpx;
  height: 240rpx;
  margin: 0 0 20rpx 20rpx;
}

.article{
  width: 660rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.article_img{
  width: 210rpx;
  height: 210rpx;
  margin-bottom: 10rpx;
}
.article_name{
  width: 210rpx;
  font-size: 24rpx;
  color: #333333;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.article_price{
  font-size: 22rpx;
  color: #de3030;
}

/* 下半部分 */

.next{
  height: 100%;
  background-color: #f7f7f7;
}

/* 精选好货 */

.sift_title{
  display: flex;
  justify-content: center;
}

.sift_title_img{
  width: 160rpx;
  height: 36rpx;
  margin: 40rpx 0 30rpx 0;
}

.sift_dis{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sift_article{
  width: 700rpx;
  height: 310rpx;
  margin: 0 auto;
  /* background-color: #ffffff; */
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sift_all{
 margin-right: 12rpx;
 background-color: #ffffff; 
}

.sift_img{
  width: 180rpx;
  height: 180rpx;
  margin: 10rpx 0;
}
.sift_a{
  font-size: 24rpx;
  color: #333333;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.sift_price{
  font-size: 22rpx;
  color: #de3030;
  text-align: left;
}
