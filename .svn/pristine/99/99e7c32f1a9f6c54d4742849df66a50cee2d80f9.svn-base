/* 好物推荐 */
.recommend_dis{
  display: flex;
  justify-content: center;
  align-items: center;
}
.recommend_title_img{
  width: 164rpx;
  height: 36rpx;
  margin: 70rpx 0 20rpx 0;
}

.recommend{
  width: 340rpx;
  height: 500rpx;
  background-color: #fff;
  /* margin-right: 20rpx; */
  margin: 0 0 20rpx 30rpx;
  float: left;
}
.recommend_img{
  width: 300rpx;
  height: 300rpx;
  margin: 20rpx 0 10rpx 20rpx;
}
.recommend_name{
  width: 300rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #333333;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.recommend_price{
  margin: 20rpx 0 10rpx 20rpx;
  text-align: left;
  font-size: 26rpx;
  color: #ed3030;
}
.payment{
  font-size: 22rpx;
  color: #b3b3b3;
  text-align: left;
  margin-left: 20rpx;
}