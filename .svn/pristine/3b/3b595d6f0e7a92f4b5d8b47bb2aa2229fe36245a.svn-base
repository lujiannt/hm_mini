/* pages/details/details.wxss */

.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  height: 100%;
  margin-top: 110rpx;
}

/* 轮播图 */

.slideshow {
  width: 700rpx;
  height: 700rpx;
  margin: 150rpx auto 50rpx auto;
  border-radius: 50rpx;
}

.slide-image {
  width: 700rpx;
  height: 700rpx;
  border-radius: 50rpx;
}

/* 商品名称 */

.product_name {
  display: flex;
  justify-content: space-between;
  margin: 0 60rpx 60rpx 30rpx;
}

.product_name_char {
  font-size: 28rpx;
  color: #333;
  text-align: left;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: bold;
}

.collect_share {
  display: flex;
  margin: 0 0 35rpx 60rpx;
  height: 38rpx;
}

.collect {
  border-right: 1px solid #808080;
  display: flex;
  align-items: center;
}

.collect_img {
  width: 29rpx;
  height: 29rpx;
  margin-right: 30rpx;
}

.share {
  background-color: #fff;
  border-radius: 0;
  padding: 0;
  line-height: 40rpx;
}

.share::after {
  border: none;
}

.share_img {
  width: 29rpx;
  height: 29rpx;
  line-height: 29rpx;
  margin-left: 30rpx;
}

/* 商品价格、月销 */

.commodity_prices_sell {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 60rpx 40rpx 30rpx;
}

.selling_price {
  font-size: 36rpx;
  color: #de4040;
}

.sell {
  font-size: 26rpx;
  color: #b3b3b3;
}

/* 商品标语 */

.goods_slogan {
  margin: 0 0 40rpx 30rpx;
  display: flex;
  align-items: center;
}

.slogan {
  font-size: 22rpx;
  color: #b3b3b3;
  margin: 0 20rpx 0 0;
}

.square {
  width: 8rpx;
  height: 8rpx;
  background-color: #b3b3b3;
  margin: 0 20rpx 0 0;
}

/* 分界线 */

.boundary {
  height: 15rpx;
  background-color: #f7f7f7;
}

/* 选择、说明 */

.select {
  display: flex;
  justify-content: space-between;
  margin: 50rpx 30rpx 50rpx 30rpx;
}

.select2 {
  display: flex;
  justify-content: space-between;
  margin: 0 30rpx 0 30rpx;
  height: 80rpx;
}

.select_left {
  display: flex;
}

.select_left_border {
  height: 35rpx;
  font-size: 28rpx;
  color: #808080;
  border-right: 1px solid #808080;
}

.select_left_char {
  font-size: 28rpx;
  color: #808080;
  margin-right: 30rpx;
 
}

.select_left_img {
  width: 78rpx;
  height: 78rpx;
  margin: 0 30rpx 0 30rpx;
}

.attr_itemValues {
  font-size: 28rpx;
  color: #808080;
}

.select-right {
  width: 13rpx;
  height: 22rpx;
  margin-top: 10rpx;
}

/* 说明 */

.explain {
  font-size: 28rpx;
  color: #333;
  margin-left: 30rpx;
}

/* 商品评价 */

.evaluate_header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 50rpx 30rpx 30rpx 30rpx;
}

.evaluate_header_left {
  display: flex;
  align-items: center;
}

.left_char {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
   font-weight: bold;
}

.left_num {
  font-size: 26rpx;
  color: #808080;
}

.evaluate_header_right {
  display: flex;
  align-items: center;
}

.right_Praise {
  font-size: 26rpx;
  color: #de4040;
  margin-right: 10rpx;
}

.right_img {
  width: 13rpx;
  height: 22rpx;
}

.comment-scroll {
  margin: 0 0 0 30rpx;
  display: flex;
  align-items: center;
  white-space: nowrap;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0 4rpx 5rpx -5rpx #000;
  opacity: 6%;
  width: 700rpx;
}

.comment_all {
  width: 360rpx;
  height: 180rpx;
  margin: 0 20rpx 0 0;
  /* display: inline-block; */
}

.comment_user {
  display: flex;
  align-items: center;
}

.comment_img {
  width: 50rpx;
  height: 50rpx;
  margin: 20rpx 10rpx 20rpx 0;
  border-radius: 50%;
}

.comment_name {
  font-size: 24rpx;
  color: #333;
}

.evaluate {
  font-size: 22rpx;
  color: #808080;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  width: 340rpx;
}

/* 相关推荐 */
.bgac{
  padding-top: 70rpx;
  background-color: #f5f5f5;
}
.recommend_char{
  font-size: 28rpx;
  color: #333333;
  margin: 30rpx 0 30rpx 30rpx;
  font-weight: bold;
}
.recommend{
  margin: 0 10rpx 0 30rpx;
}
.recommend_all{
  width: 230rpx;
  height: 300rpx;
  background-color: #ffffff;
  float: left;
  margin: 0 5rpx 10rpx 0;
}
.recommend_img{
  width: 210rpx;
  height: 210rpx;
  margin: 10rpx 10rpx 0 10rpx;
}
.recommend_name{
  font-size: 24rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 0 0 15rpx 0;
}
.recommend_price{
  font-size: 22rpx;
  color: #ed3030;
  text-align: left;
}

/* 大图下文字 */
.char_28{
  font-size: 28rpx;
  color: #333333;
  text-align: left;
  margin: 40rpx 0 0 30rpx;
  font-weight: bold;
}
.char_24{
  font-size: 24rpx;
  color: #333333;
  text-align: left;
  margin: 40rpx 0 20rpx 30rpx;
  font-weight: bold;
}
.char_2480{
  font-size: 24rpx;
  color: #808080;
  margin: 0 30rpx 0 30rpx;
  line-height: 40rpx;
}
.char_248080{
  font-size: 24rpx;
  color: #808080;
  margin: 0 30rpx 190rpx 30rpx;
  line-height: 40rpx;
}


/* 底部固定导航栏 */
.goods_tabbar{
  width: 750rpx;
  height: 140rpx;
  background-color: #ffffff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
}
.goods_tabbar_left{
  display: flex;
  align-items: center;
}
/* 首页 */
.home_page{
  margin: 0 80rpx 0 60rpx;
}
.home_page_img{
  width: 43rpx;
  height: 43rpx;
  margin: 0 auto 10rpx auto;
  display: block;
  
}
.home_page_char{
  font-size: 24rpx;
  color: #808080;
  text-align: center;
}
/* 购物车 */
.trolley{
  margin: 0 52rpx 0 0;
}
/* 加入购物车、立即购买 */
.goods_tabbar_right{
  display: flex;
  align-items: center;
}
.join_trolley{
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  background-color: #eca547;
  font-size: 28rpx;
  color: #fffefe;
  text-align: center;
  margin: 0 20rpx 0 0;
}
.immediately{
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  background-color: #de4040;
  font-size: 28rpx;
  color: #fffefe;
  text-align: center;
}