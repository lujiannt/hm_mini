/* pages/invite_friends/invite_friends.wxss */

.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  margin-top: 120rpx;
}

.title_img {
  width: 100%;
  height: 490rpx;
}

/* 邀请人 */

.inviter_auto {
  width: 640rpx;
  height: 390rpx;
  border-radius: 40rpx;
  background-color: #fff;
  margin: 0 auto 50rpx auto;
  box-shadow: 1px 1px 5px #ccc;
  position: absolute;
  top: 280rpx;
  left: 7%;
}

.inviter_user_img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin: -60rpx auto 30rpx auto;
  display: block;
}

.wx_code {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 50rpx;
  top: 30rpx;
}

.inv_code {
  text-align: center;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 70rpx;
}

.inviter_dis {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 400rpx;
  margin: 0 auto 0 auto;
}

.inviter_left {
  padding-right: 100rpx;
  border-right: 1px solid #b3b3b3;
}

.p_num {
  font-size: 32rpx;
  color: #333;
  text-align: center;
}

.p_num_char {
  font-size: 24rpx;
  color: #b3b3b3;
}

.inviter_right {
}

/* 分享按钮 */

.share_friend {
  width: 420rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 45rpx;
  background-color: #de4040;
  font-size: 28rpx;
  color: #fff;
  position: relative;
  margin: 250rpx auto 30rpx auto;
}
.share_friend::after{
  border: none;
}
.share_circle::after{
  border: none;
}
.share_circle {
  width: 420rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 45rpx;
  font-size: 28rpx;
  color: #333;
  position: relative;
  margin: 0 auto;
  border: 1px solid #333333;
}

.share_img{
  width: 35rpx;
  height: 30rpx;
  position: absolute;
  top:30rpx;
  left: 60rpx;
}

.friend_img{
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  top:30rpx;
  left: 60rpx;
}

/* 规则 */
.rule{
  font-size: 28rpx;
  color: #333;
  text-align: left;
  margin: 76rpx 0 0 60rpx;
}
.rule_invite{
  font-size: 24rpx;
  color: #333333;
  width: 640rpx;
  margin: 40rpx auto;
}
