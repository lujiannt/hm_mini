/* pages/my_order/my_order.wxss */

page {
  background-color: #f7f7f7;
}

.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  margin-top: 125rpx;
}

/* 头部选项 */

.header_option_all {
  width: 750rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  background-color: white;
  position: fixed;
}

.header_option {
  font-size: 28rpx;
  color: #333;
  padding: 20rpx 0;
}

.pitch_on {
  font-size: 32rpx;
  color: #de4040;
  border-bottom: 5rpx solid #de4040;
  border-radius: 3rpx;
}

/* 订单商品 */
.all_orders_all{
  padding: 80rpx 0 0 0;
}

.all_orders {
  width: 700rpx;
  background-color: white;
  margin: 20rpx auto 0 auto;
}

.all_orders_header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ccc;
  margin-bottom: 10rpx;
}

.header_left {
  margin: 40rpx 0 30rpx 20rpx;
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.header_state {
  font-size: 28rpx;
  color: #de4040;
  margin-right: 40rpx;
  font-weight: bold;
}

/* 订单商品 */

.orders_goods {
  margin: 20rpx 40rpx 0 20rpx;
  overflow: hidden;
}

.goods_img {
  width: 148rpx;
  height: 148rpx;
  float: left;
  margin: 0 20rpx 20rpx 0;
}

.goods_right {
  float: left;
  width: 72%;
  margin: 0 0 20rpx 0;
}

.goods_header_right {
  display: flex;
  justify-content: space-between;
}

.goods_name {
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-right: 34rpx;
  height: 75rpx;
}

.goods_price {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.goods_num {
  font-size: 26rpx;
  color: #b3b3b3;
}

.title {
  font-size: 24rpx;
  color: #b3b3b3;
}

/* 商品金额 */

.common {
  font-size: 24rpx;
  color: #b3b3b3;
  text-align: right;
  width: 580rpx;
  margin: 50rpx auto;
}

.sum {
  font-size: 24rpx;
  color: #b3b3b3;
  margin-left: 34rpx;
}

.goods_price {
  font-size: 24rpx;
  color: #de4040;
  font-weight: bold;
}

/* 订单按钮 */

.buttons {
  display: flex;
  align-items: center;
  justify-content:flex-end;
  margin-right: 50rpx;
}

.cancel {
  border-radius: 35rpx;
  border: 1px solid #333;
  width: 210rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #333;
  margin: 0 30rpx 50rpx 0;
}

.payment {
  border-radius: 35rpx;
  width: 210rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #ffffff;
  background-color: #de4040;
  margin: 0 0 50rpx 0;
}

.payment2 {
  border-radius: 35rpx;
  width: 210rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #ffffff;
  background-color: #de4040;
  margin: 0 0 50rpx 0;
}

.payment2::after{
  border: none;
}

.evaluate{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  border: 1px solid #de4040;
  font-size: 28rpx;
  color: #de4040;
  float: right;
}
