/* pages/evaluate/evaluate.wxss */

.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  margin-top: 130rpx;
}

/* 评论商品 */

.header_dis {
  display: flex;
  margin: 170rpx 25rpx 46rpx 25rpx;
}

.dis_img {
  width: 110rpx;
  height: 110rpx;
  margin-right: 20rpx;
}

.dis_name {
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* 评价 */
.goods_eva{
  display: flex;
  align-items: center;
  margin: 0 0 40rpx 25rpx;
}
.eva_start{
  display: flex;
  align-items: center;
}
.eva_char{
  font-size: 32rpx;
  color: #333333;
  margin: 0 0 0 25rpx;
}
.start{
  width: 30rpx;
  height: 30rpx;
  margin: 0 0 0 20rpx;
}

.praise{
  margin: 0 0 0 50rpx;
  font-size: 32rpx;
  color: #de4040;
}

/* 标签 */
.label_all{
  margin: 40rpx 0 60rpx 0;
}
.label{
  min-width: 140rpx;
  height: 57rpx;
  line-height: 57rpx;
  text-align: center;
  font-size: 26rpx;
  color: #808080;
  border-radius: 28rpx;
  border: 1px solid #cccccc;
  float: left;
  margin: 0 0 40rpx 25rpx;
}
.select{
  min-width: 140rpx;
  height: 57rpx;
  line-height: 57rpx;
  text-align: center;
  font-size: 26rpx;
  color: #de4040;
  border-radius: 28rpx;
  border: 1px solid #de4040;
  float: left;
  margin: 0 0 40rpx 25rpx;
  background-color: #ffe5e5;
}

.comment{
  margin: 60rpx 25rpx 10rpx 25rpx;
  width: 700rpx;
}
.content{
  font-size: 28rpx;
  color: #b3b3b3;
}
.no_uploaded{
  width: 100rpx;
  height: 100rpx;
  margin: 0 25rpx 60rpx 25rpx;
  float: left;
}
.add_comment{
  width: 560rpx;
  height: 70rpx;
  margin: 50rpx auto;
  font-size: 28rpx;
  color: #ffffff;
  border-radius: 35rpx;
  background-color: #de4040;
  text-align: center;
  line-height: 70rpx;
}

.add_uploaded{
  width: 100rpx;
  height: 100rpx;
  float: left;
  margin: 0 0 25rpx 25rpx;
}

/* 模态框 */
.modals {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.modals-cancel {
  position: absolute;
  z-index: 1000;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.bottom-dialog-body {
  position: absolute;
  z-index: 10001;
  width: 560rpx;
  height: 350rpx;
  bottom: 35%;
  left: 12%;
  right: 0;
  background-color: #fff;
  overflow: scroll;
  border-radius: 20rpx;
}

.inquiry{
  margin: 92rpx 0 80rpx 0;
  text-align: center;
  font-size: 32rpx;
  color: #333333;
}
.inquiry_btn{
  width: 480rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.btn_left{
  width: 210rpx;
  height: 70rpx;
  border-radius: 35rpx;
  background-color: #cccccc;
  font-size: 28rpx;
  color: #ffffff;
  text-align: center;
  line-height: 70rpx;
}
.btn_right{
  width: 210rpx;
  height: 70rpx;
  border-radius: 35rpx;
  background-color: #de4040;
  font-size: 28rpx;
  color: #ffffff;
  text-align: center;
  line-height: 70rpx;
}