// pages/add_address/add_address.js
const app = getApp()
var configuration = require('../../configuration/configuration.js');
Page({

  /**
   * 页面的初始数据
   */
  data: {
    manage: true,
    province: ["请选择地址"],
    selected: false,
    //要修改的地址id
    updateAddressId: null,
    click_home: false,
    click_firm: false,
    click_scol: false,
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function(options) {
    console.log(options,"oo")
    if(options){
      if (options.select) {
        this.data.select = options.select
      }
    }


    // 获取地址
    wx.request({
      url: configuration.HOST + '/mini/member/listAddress',
      method: "POST",
      header: {
        "Content-Type": "application/x-www-form-urlencoded"
      },
      data: {
        memberId: wx.getStorageSync('userinfo').id
      },
      success: res => {
        console.log(res, "rrr")

        if (res.statusCode != 200) {
          wx.showToast({
            title: '系统错误,请稍后',
            icon: 'none',
            duration: 1000,
          });
        }

        if (res.data.code == 200) {
          for (var i = 0; i < res.data.data.length; i++) {
            res.data.data[i].iphone = res.data.data[i].phone.substring(0, 4) + "****" + res.data.data[i].phone.substring(8, 11)
            res.data.data[i].address_dz = res.data.data[i].province + "\xa0" + res.data.data[i].city + "\xa0" + res.data.data[i].region + "\xa0" + res.data.data[i].address + "\xa0"
          }

          this.setData({
            address: res.data.data
          })

        } else {
          wx.showToast({
            title: '系统错误,请稍后',
            icon: 'none',
            duration: 1000,
          });
        }

      },
      fail: req => {
        console.log(req, "qqq")
        wx.showToast({
          title: '系统错误,请稍后',
          icon: 'none',
          duration: 1000,
        });
      }
    })

  },

  // 添加地址页面
  add_address: function(e) {
    this.setData({
      manage: false,
      //将要更新的地址id设置为null
      updateAddressId: null,
      c_name: null,
      c_phone: null,
      province: '请选择所在地区',
      selected: false,
      c_address: null,
      click_home: true,
      click_firm: false,
      click_scol: false,
    })
  },

  // 保存或更新地址
  addAddress: function(e) {
    var self = this;
    console.log('updateAddressId = ' + self.data.updateAddressId);

    //判断标签值
    var lable = '家';
    if(this.data.click_home == true) {
      lable = '家';
    }else if(this.data.click_firm == true) {
      lable = '公司';
    }else if(this.data.click_scol == true) {
      lable = '学校';
    }

    //判断是新增还是更新
    if(self.data.updateAddressId == null) {
      wx.request({
        url: configuration.HOST + '/mini/member/addAddress',
        method: "POST",
        header: {
          "Content-Type": "application/x-www-form-urlencoded"
        },
        data: {
          memberId: wx.getStorageSync('userinfo').id,
          name: this.data.con_name,
          province: this.data.province[0],
          city: this.data.province[1],
          region: this.data.province[2],
          phone: this.data.con_phone,
          address: this.data.details_add,
          label: lable
        },
        success: res => {
          console.log(res, "rrr")
          if (res.statusCode != 200) {
            wx.showToast({
              title: '系统错误,请稍后',
              icon: 'none',
              duration: 1000,
            });
          }

          if (res.data.code == 200) {
            wx.showToast({
              title: '设置成功',
              icon: 'none',
              duration: 1000,
            });
            self.onLoad();

            wx.redirectTo({
              url: '/pages/add_address/add_address',
            })

          } else {
            wx.showToast({
              title: '系统错误,请稍后',
              icon: 'none',
              duration: 1000,
            });
          }

        },
        fail: req => {
          wx.showToast({
            title: '系统错误,请稍后',
            icon: 'none',
            duration: 1000,
          });
        }
      })
    }else {
      if (self.data.province instanceof Array) {
        var locations = self.data.province;
      }else {
        var locations = self.data.province.split(',');
      }
      
      wx.request({
        url: configuration.HOST + '/mini/member/modifyAddress',
        method: "POST",
        header: {
          "Content-Type": "application/x-www-form-urlencoded"
        },
        data: {
          addressId: self.data.updateAddressId,
          name: self.data.c_name,
          province: locations[0],
          city: locations[1],
          region: locations[2],
          phone: self.data.c_phone,
          address: self.data.c_address,
          label: lable
        },
        success: res => {
          console.log(res, "rrr")
          if (res.statusCode != 200) {
            wx.showToast({
              title: '系统错误,请稍后',
              icon: 'none',
              duration: 1000,
            });
          }

          if (res.data.code == 200) {
            wx.showToast({
              title: '设置成功',
              icon: 'none',
              duration: 1000,
            });
            self.setData({
              updateAddressId: null
            })
            self.onLoad();

            wx.redirectTo({
              url: '/pages/add_address/add_address',
            })

          } else {
            wx.showToast({
              title: '系统错误,请稍后',
              icon: 'none',
              duration: 1000,
            });
          }

        },
        fail: req => {
          wx.showToast({
            title: '系统错误,请稍后',
            icon: 'none',
            duration: 1000,
          });
        }
      })
    }

  },

  // 表单
  con_name: function(e) {
    this.data.con_name = e.detail.value
    this.data.c_name = e.detail.value
  },
  con_phone: function(e) {
    this.data.con_phone = e.detail.value
    this.data.c_phone = e.detail.value
  },

  //选择地址
  bindRegionChange: function(e) {
    console.log(e)
    this.setData({
      province: e.detail.value
    })
    this.data.province = e.detail.value
    if (this.data.province == e.detail.value) {
      this.setData({
        selected: true,
      })
    }
  },

  details_address: function(e) {
    this.data.details_add = e.detail.value
    this.data.c_address = e.detail.value
  },

  click_home: function(e) {
    console.log(e)
    if (e.currentTarget.dataset.name == "家") {
      this.setData({
        click_home: true,
        click_firm: false,
        click_scol: false,
      })
    }
  },
  click_firm: function(e) {
    if (e.currentTarget.dataset.name == "公司") {
      this.setData({
        click_home: false,
        click_firm: true,
        click_scol: false,
      })
    }
  },
  click_scol: function(e) {
    if (e.currentTarget.dataset.name == "学校") {
      this.setData({
        click_home: false,
        click_firm: false,
        click_scol: true,
      })
    }
  },

  default_add: function(e) {
    var self = this;
    console.log(e.currentTarget.dataset.id)
    // console.log(typeof (e.currentTarget.dataset.id),"iii")

    wx.request({
      url: configuration.HOST + '/mini/member/setDefaultAddress',
      method: "POST",
      header: {
        "Content-Type": "application/x-www-form-urlencoded"
      },
      data: {
        addressId: e.currentTarget.dataset.id,
      },
      success: res => {
        console.log(res, "rrr")
        if (res.statusCode != 200) {
          wx.showToast({
            title: '系统错误,请稍后',
            icon: 'none',
            duration: 1000,
          });
        }

        if (res.data.code == 200) {
          wx.showToast({
            title: '设置成功',
            icon: 'none',
            duration: 1000,
          });
          this.onLoad();
        } else {
          wx.showToast({
            title: '系统错误,请稍后',
            icon: 'none',
            duration: 1000,
          });
        }

      },
      fail: req => {
        wx.showToast({
          title: '系统错误,请稍后',
          icon: 'none',
          duration: 1000,
        });
      }
    })

  },

  remove: function(e) {
    var that = this
    wx.showModal({
      title: '提示',
      content: '确定要删除吗？',
      success: function(sm) {
        if (sm.confirm) {
          wx.request({
            url: configuration.HOST + '/mini/member/removeAddress',
            method: "POST",
            header: {
              "Content-Type": "application/x-www-form-urlencoded"
            },
            data: {
              addressId: e.currentTarget.dataset.id,
            },
            success: res => {
              console.log(res, "rrr")
              if (res.statusCode != 200) {
                wx.showToast({
                  title: '系统错误,请稍后',
                  icon: 'none',
                  duration: 1000,
                });
              }

              if (res.data.code == 200) {

                wx.showToast({
                  title: '删除成功',
                  icon: 'none',
                  duration: 1000,
                });
                that.onLoad();

              } else {
                wx.showToast({
                  title: '系统错误,请稍后',
                  icon: 'none',
                  duration: 1000,
                });
              }

            },
            fail: req => {
              wx.showToast({
                title: '系统错误,请稍后',
                icon: 'none',
                duration: 1000,
              });
            }
          })
        }
      }
    })

  },

  // 选择地址或者修改地址
  select_add:function(e){
    console.log(e,"ee")
    if(this.data.select == "true"){
      wx.redirectTo({
        url: '/pages/purchase/purchase?id=' + e.currentTarget.dataset.id + '&phone=' + e.currentTarget.dataset.phone + '&address_dz=' + e.currentTarget.dataset.address_dz,
      })
    }else{
      console.log(this.data.address,"aa")
      this.setData({
        manage:false,
        updateAddressId: e.currentTarget.dataset.id,
        c_name: e.currentTarget.dataset.name,
        c_phone: e.currentTarget.dataset.phone,
        province: e.currentTarget.dataset.province + "," + e.currentTarget.dataset.city + "," + e.currentTarget.dataset.region ,
        selected:true,
        c_address: e.currentTarget.dataset.address,
      })

      if (e.currentTarget.dataset.title == "家"){
        this.setData({
          click_home:true,
          click_firm:false,
          click_scol:false,
        })
      } else if (e.currentTarget.dataset.title == "公司"){
        this.setData({
          click_home: false,
          click_firm:true,
          click_scol:false,
        })
      } else if (e.currentTarget.dataset.title == "学校"){
        this.setData({
          click_home: false,
          click_firm:false,
          click_scol:true,
        })
      }


    }
  },

  man: function (e) {
    this.setData({
      manage:e.detail
    })
  },


  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function() {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function() {

  },


  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function() {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function() {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function() {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function() {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function() {

  }
})