/* pages/login/login.wxss */
.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  height: 85%;
  margin-top: 120rpx;
}

/* 手机号 */
.phone{
  position: relative;
  margin-top: 187rpx;
}
.phone_number{
  width: 500rpx;
  height: 96rpx;
  margin: 0 auto 50rpx auto;
  padding-left: 100rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #333;
}
.pl_phone_number{
   font-size: 30rpx;
  color: #ccc;
}
.icon-iphone{
  position: absolute;
  top: 30rpx;
  left: 115rpx;
  width: 40rpx;
  height: 40rpx;
}

/* 验证码 */
.password{
  position: relative;
}

.enter_password{
  width: 500rpx;
  height: 96rpx;
  margin: 0 auto 50rpx auto;
  padding-left: 100rpx;
  color: black;
  font-size: 30rpx;
  border-bottom: 1px solid #333;
}

.pl_enter_password{
   font-size: 30rpx;
  color: #ccc;
}

.icon-lnvitation{
  position: absolute;
  top: 30rpx;
  left: 115rpx;
  width: 40rpx;
  height: 40rpx;
}

.verification{
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: #999999;
  position: absolute;
  top:30rpx;
  right: 110rpx;
  text-align: center;
  border-radius: 10rpx;
  z-index: 10;
}

/* 设置密码 */
.lock{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 30rpx;
  left: 115rpx;
}

.eye{
  width: 32rpx;
  height: 23rpx;
}

.examine{
  width: 96rpx;
  height: 96rpx;
  line-height: 96rpx;
  position: absolute;
  top: 0;
  right: 80rpx;
  z-index: 10;
  text-align: center;
}

/* 邀请码 */
.Invitation{
    position: relative;
}
.icon-inv{
  position: absolute;
  top: 30rpx;
  left: 115rpx;
  width: 40rpx;
  height: 40rpx;
}

/* 错误提示 */
.password_error{
  text-align: center;
  font-size: 26rpx;
  color: #de4040;
  margin: 20rpx 0 0 0;
}

/* 提交按钮 */
.regbut{
  width: 550rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #fff !important;
  border-radius: 65rpx;
  background-color: #cccccc !important;
  margin: 80rpx auto 0 auto;
}

.redbut{
  width: 550rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #fff !important;
  border-radius: 65rpx;
  margin: 80rpx auto 0 auto;
  background-color: #de4040 !important;
}

/* 注册成功 */
.loginwin-img{
  width: 208rpx;
  height: 208rpx;
  margin: 70rpx 0 70rpx 36%;
}

.loginsuc{
  font-size: 30rpx;
  color: #de4040;
  text-align: center;
  margin-bottom: 130rpx;
}

.confirm_jump{
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  background-color: #de4040;
  color: #ffffff;
  font-size: 30rpx;
  text-align: center;
  margin: 0 auto;
}